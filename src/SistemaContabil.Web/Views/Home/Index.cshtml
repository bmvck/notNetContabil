@{
    ViewData["Title"] = "Início";
}

<div class="row">
    <div class="col-12">
        <h1 class="display-4 mb-4">
            <i class="bi bi-calculator text-primary"></i> Sistema Contábil
        </h1>
        <p class="lead">Bem-vindo ao Sistema Contábil - Gerenciamento completo de contabilidade</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-building fs-1 text-primary mb-3"></i>
                <h5 class="card-title">Centros de Custo</h5>
                <p class="card-text">Gerencie os centros de custo da empresa</p>
                <a href="@Url.Action("Index", "CentroCusto")" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Acessar
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-journal-text fs-1 text-success mb-3"></i>
                <h5 class="card-title">Contas Contábeis</h5>
                <p class="card-text">Gerencie as contas contábeis do plano</p>
                <a href="@Url.Action("Index", "Conta")" class="btn btn-success">
                    <i class="bi bi-arrow-right"></i> Acessar
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-receipt fs-1 text-warning mb-3"></i>
                <h5 class="card-title">Registros Contábeis</h5>
                <p class="card-text">Registre as movimentações contábeis</p>
                <a href="@Url.Action("Index", "RegistroContabil")" class="btn btn-warning">
                    <i class="bi bi-arrow-right"></i> Acessar
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-person fs-1 text-info mb-3"></i>
                <h5 class="card-title">Clientes</h5>
                <p class="card-text">Gerencie o cadastro de clientes</p>
                <a href="@Url.Action("Index", "Cliente")" class="btn btn-info">
                    <i class="bi bi-arrow-right"></i> Acessar
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-cart fs-1 text-danger mb-3"></i>
                <h5 class="card-title">Vendas</h5>
                <p class="card-text">Gerencie as vendas realizadas</p>
                <a href="@Url.Action("Index", "Vendas")" class="btn btn-danger">
                    <i class="bi bi-arrow-right"></i> Acessar
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-code-square fs-1 text-secondary mb-3"></i>
                <h5 class="card-title">API Documentation</h5>
                <p class="card-text">Acesse a documentação completa da API</p>
                <a href="/swagger" target="_blank" class="btn btn-secondary">
                    <i class="bi bi-box-arrow-up-right"></i> Abrir Swagger
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Animação suave ao carregar
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.5s ease';
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 10);
                }, index * 100);
            });
        });
    </script>
}
