@model RegistroContabilDto
@{
    ViewData["Title"] = "Detalhes do Registro Contábil";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="bi bi-eye"></i> Detalhes do Registro Contábil</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.IdRegCont</dd>

                    <dt class="col-sm-4">Valor:</dt>
                    <dd class="col-sm-8"><strong>@Model.Valor.ToString("C")</strong></dd>

                    <dt class="col-sm-4">Conta:</dt>
                    <dd class="col-sm-8">@Model.NomeConta</dd>

                    <dt class="col-sm-4">Centro de Custo:</dt>
                    <dd class="col-sm-8">@Model.NomeCentroCusto</dd>

                    <dt class="col-sm-4">Data de Criação:</dt>
                    <dd class="col-sm-8">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>

                    @if (Model.DataAtualizacao.HasValue)
                    {
                        <dt class="col-sm-4">Última Atualização:</dt>
                        <dd class="col-sm-8">@Model.DataAtualizacao.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                </dl>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <a href="@Url.Action("Edit", new { id = Model.IdRegCont })" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
