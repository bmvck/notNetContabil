@model IEnumerable<VendasDto>
@{
    ViewData["Title"] = "Vendas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-cart"></i> Vendas</h2>
    <a href="@Url.Action("Create")" class="btn btn-danger">
        <i class="bi bi-plus-circle"></i> Nova Venda
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Cliente</th>
                    <th>Registro Contábil</th>
                    <th>Valor</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdVendas</td>
                        <td>@item.NomeCliente</td>
                        <td>#@item.RegContIdRegCont</td>
                        <td>@item.Valor.ToString("C")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("Details", new { id = item.IdVendas })" 
                                   class="btn btn-sm btn-info" title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = item.IdVendas })" 
                                   class="btn btn-sm btn-warning" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.IdVendas })" 
                                   class="btn btn-sm btn-danger" title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Nenhuma venda cadastrada. 
        <a href="@Url.Action("Create")" class="alert-link">Clique aqui para criar a primeira.</a>
    </div>
}
