@model CriarVendasDto
@{
    ViewData["Title"] = "Nova Venda";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Nova Venda</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ClienteIdCliente" class="form-label"></label>
                            <select asp-for="ClienteIdCliente" asp-items="ViewBag.ClienteIdCliente" class="form-select">
                                <option value="">Selecione um cliente</option>
                            </select>
                            <span asp-validation-for="ClienteIdCliente" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="RegContIdRegCont" class="form-label"></label>
                            <select asp-for="RegContIdRegCont" asp-items="ViewBag.RegContIdRegCont" class="form-select">
                                <option value="">Selecione um registro cont√°bil</option>
                            </select>
                            <span asp-validation-for="RegContIdRegCont" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="VendaEventoIdEvento" class="form-label">ID Evento (Opcional)</label>
                        <input asp-for="VendaEventoIdEvento" type="number" class="form-control" 
                               placeholder="ID do evento de venda IoT (opcional)" />
                        <span asp-validation-for="VendaEventoIdEvento" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-save"></i> Salvar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
